<!-- display.ejs -->
<!DOCTYPE html>
<html>

<head>
  <%- include('../partials/_head') %>
  <link rel="stylesheet" type="text/css" href="/css/save-article.css">
  <title>Edit Articles</title>
</head>
<header>
  <%- include("../partials/_header") %>
</header>

<body>
  <main class="modify-article">
  <%- include('../partials/_sidebar') %>

    <div class="col-4 text-center mb-3"><button class="form-button" onclick="window.location='/home'">Home Page</button>
    </div>
    <div class="col-4 text-center mb-3">
      <h1>List of Articles</h1>
    </div>
    <div class="col-4 text-center mb-3"><button class="form-button" onclick="window.location='/save-article/0'">Add New
        Article</button></div>

    <div class="data-container">
      <% data.forEach(function(item) { %>
        <div class="data-item">
          <img src="<%= item.imageUrl %>" class="data-image" alt="Image">
          <p class="data-title">
            <%= item.title %>
          </p>
          <button class="form-button" onclick="window.location='/save-article/<%= item._id %>'">Edit</button>
          <button class="form-button button-delete" data-article-id="<%= item._id %>" onclick="DeleteArticle(this)">Delete</button>
        </div>
        <% }); %>
    </div>
  </main>
</body>

</html>