<!DOCTYPE html>
<html>

<head>
	<link rel="stylesheet" type="text/css" href="/css/htmlApp.css">
	<link rel="stylesheet" type="text/css" href="/css/accordion.css">
	<script src="https://kit.fontawesome.com/6a7b1ca22e.js" crossorigin="anonymous"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
	<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
	<script src="/js/functions.js"></script>
	<meta charset="UTF-8">
    <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" type="text/css" href="/css/chatbox-style.css">
    <link rel="stylesheet" type="text/css" href="/css/chat.css">
	
</head>
<body>
<header>
	<div id="logo-div">
		<a href="/">
		<img id="logo"
			src="https://fiverr-res.cloudinary.com/t_main1,q_auto,f_auto/gigs2/301383703/original/a8cccf825048f406f8868a549aa14d2dda6c3182.jpg"
			alt="">
		</a>
	</div>
	<div style="flex-grow: 2; text-align: center;">
		<a id="play" onclick="play()"><i class="fa fa-play radio-btn"></i></a>
		<a id="pause" onclick="pause()"><i class="fa fa-pause radio-btn"></i></a>
		<audio id="music">
			<source src="audio/TravelMusic.mp3" type="audio/mpeg">
		</audio>
	</div>
	<nav>
		<div class="hamburger" onclick="toggleHamburger()">
			<div class="line"></div>
			<div class="line"></div>
			<div class="line"></div>
		</div>
		<div class="hamburger-menu">
			<i class="fa fa-times" aria-hidden="true" id="x-close" onclick="toggleHamburger()"></i>
			<div class="hamburger-menu-item">
				<div>
					<a href="/">
						<img src="https://fiverr-res.cloudinary.com/t_main1,q_auto,f_auto/gigs2/301383703/original/a8cccf825048f406f8868a549aa14d2dda6c3182.jpg"
							alt="">
					</a>
				</div>
				<div>
					<span><a href="home">Home</a></span>
				</div>
				<div>
					<span><a href="about">About</a></span>
				</div>
				<div>
					<span><a href="contact">Contact</a></span>
				</div>
			</div>
		</div>

		<ul id="nav_bar">
			<li><a href="/home">Home</a></li>
			<li><a href="/about">About</a></li>
			<li><a href="/contact">Contact</a></li>
			<form id="google-search" action="https://www.google.com/search" method="get" target="_blank">
				<label for="search"></label>
				<input type="text" id="search" class="search-input" name="q" placeholder="Google">
				<button class="search" type="submit">Search</button>
			</form>
		</ul>
	</nav>
</header>
	<main id="ham-main">
		<%- include('../partials/_sidebar') %>
		
	
		<script src="/js/script.js"></script>
		<section class="center">
				  <div class="container article-world <%= article.class %>" id="<%= article._id %>">
				  <h2 class="article-title"><%= article.title %></h2>
				  <img class="image" src="<%= article.imageUrl %>" alt="<%= article.imageText %>">
				  <p class="description"><%= article.description %></p>
				  <button id="like-button" onclick="like('<%= article._id %>')"><i class="fa fa-thumbs-up"></i> Like</button>
				  <button id="dislike-button" onclick="dislike('<%= article._id %>')"><i class="fa fa-thumbs-down"></i> Dislike</button>
				  <div>
					<span id="like-count-<%= article._id %>"><%= article.likes %></span> likes,
					<span id="dislike-count-<%= article._id %>"><%= article.dislikes %></span> dislikes
				  </div>
				</div>
			  
		</section>
	
	</main>
	<%- include('../partials/chat') %>
<footer>
	<%- include('../partials/_footer') %>
</footer>
	<script src="/js/jqueryScript.js"></script>
	<script src="/js/chat-script.js"></script>
	<script src="/js/likeDislike.js"></script>
	<script type="module" src="/js/music.js"></script>
	<script src="/dist/bundle.js" type="module"></script>
</body>
</html>